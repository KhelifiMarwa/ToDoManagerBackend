<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoManagerMobile.Controls.BottomNavBar"
             xmlns:material="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             BackgroundColor="Transparent">
 
        <Grid>
            <Frame HeightRequest="70"
               CornerRadius="30"
               BackgroundColor="#1976D2"
               HorizontalOptions="Fill"
               VerticalOptions="End"
               Margin="12,0,12,12"
               HasShadow="True">
                <Grid ColumnDefinitions="*,*,*,*">
                    <StackLayout Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image x:Name="HomeIcon" Source="home.png" WidthRequest="24" HeightRequest="24">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNavItemTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </StackLayout>
                    <StackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image x:Name="TasksIcon" Source="tasks.png" WidthRequest="24" HeightRequest="24">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNavItemTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </StackLayout>
                    <StackLayout Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image x:Name="SettingsIcon" Source="settings.png" WidthRequest="24" HeightRequest="24">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNavItemTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </StackLayout>
                    <StackLayout Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image x:Name="ProfileIcon" Source="profile.png" WidthRequest="24" HeightRequest="24">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNavItemTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>
    </ContentView>
